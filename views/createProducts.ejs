            <a href="">All Products</a>
            <a href="">Create new products</a>
        </div>
    </div>
    <div class="products">
        <h1>Create New Product</h1>
        <div class="items">
           <form id="productForm" action="/product/create" method="post" enctype="multipart/form-data">
            <label for="file">Upload Image</label>
            <input type="file" name="image" id="image">
            <label for="name">Enter Name</label>
            <input type="text" name="name" id="name" placeholder="Product Name">
            <label for="price">Enter Price</label>
            <input type="text" name="price" id="price" placeholder="Product Price">
            <label for="price">Enter Discount</label>
            <input type="text" name="discount" id="discount" placeholder="Discount Price">
            <label>Choose Category</label>
            <select name="category" id="category">
              <option value="default">Choose a category</option>
              <option value="Ethnic Wear">Salwar Suits</option>
              <option value="saree">Saree</option>
              <option value="kurtis">Kurtis</option>
              <option value="ethnic-wear">Ethnic Wear</option>
            </select>
            <button type="submit">Create Product</button>
          </form>
        </div>
    </div>
    </div>
  </body>
