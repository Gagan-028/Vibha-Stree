<%- include('./header') %>
    <style>
      body {
        margin: 0px;
      }
      .sidebar {
        font-family:Verdana, Geneva, Tahoma, sans-serif;
        font-weight: bold;
        width: 20%;
        height:100%;
        background-color: rgb(236, 232, 232);
        position: absolute;
      }
      .sortBy {
        padding: 50px;
      }
      .collection {
        display: flex;
        flex-direction: column;
        padding: 50px;
      }
      a {
        padding: 3px;
        color: black;
        text-decoration: none;
      }
      .filter {
        padding: 50px;
        display: flex;
        flex-direction: column;
      }
      .items {
        /* box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); */
        transition: 0.3s;
        width: 21%;
        max-height: 300px;
        margin: 0%;
        padding: 20px;
      }
      .item-detail {
        background-color: aquamarine;
        margin: 0% !important;
        /* padding: 20px; */
        /* overflow:auto; */
      }
      
      .products {
        font-family:Verdana, Geneva, Tahoma, sans-serif;
        font-weight: bold;
        left: 20% !important;
        width: 70%;
        height: 100%;
        background-color: rgb(152, 152, 152);
        position: absolute;
        padding: 5%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
      }
      .products img{
        width:  150px;
        height: 250px;
      }
    </style>
  <body>  
    
    <div class="sidebar">
      <div class="sortBy">
        <b>Sort By</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <select name="sortby" id="sortby">
          <option value="newest">Newest</option>
          <option value="trending">Trending</option>
        </select>
      </div>
      <div class="collection">
        <a href="">All Collection</a>
        <a href="">New Collection</a>
        <a href="">Discounted Collection</a>
      </div>
      <div class="filter">
        <a href="">Filter By:</a><br />
        <a href="">Availability</a>
        <a href="">Discount</a>
      </div>
    </div>
    <div class="products">
      <% products.forEach((products)=> { %>
        <div class="items">
          <div class="item-detail">
            <img src="data:image/jpeg;base64,<%= products.image.toString('base64') %>"alt="" srcset="" style="width: 100%"/>
            <div class="content" style="display: flex; flex-direction: row;">
              <div class="detail" style="padding: 10px;">
                <h3 style="margin-bottom: 0%;"><%= products.name.toWellFormed()%></h3>
                <h5 style="margin: 0%;"><%= products.price %></h5>
              </div>
              <a href="/product/addToCart/<%= products._id %>" style=" width: 60%;float: right;display: flex;justify-content: flex-end;align-self: center;align-items: center;">
                <i class="ri-add-line">+</i>
              </a>
            </div>
          </div>
        </div> 
      <% }) %>
      </div>
  </body>
